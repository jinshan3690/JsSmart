<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape>
            <corners android:radius="@dimen/btnRadius" />
            <stroke android:color="@color/btnDisable" android:width="@dimen/btnBorder"/>
            <solid android:color="@color/btnDisable"/>
        </shape>
    </item>
    <item>
        <shape>
            <corners android:radius="@dimen/btnRadius" />
            <stroke android:color="@color/btnPrimary" android:width="@dimen/btnBorder"/>
            <solid android:color="@color/colorWhite"/>
        </shape>
    </item>
</selector>
