<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android" android:exitFadeDuration="200">
    <item android:state_window_focused="false">
        <shape>
            <corners android:radius="@dimen/btnRadiusLarge" />
            <solid android:color="@color/colorTransparent" />
        </shape>
    </item>

    <item android:state_enabled="false" android:state_focused="true" android:state_pressed="true" >
        <shape>
            <corners android:radius="@dimen/btnRadiusLarge" />
            <solid android:color="@color/colorTransparent" />
        </shape>
    </item>
    <item android:state_enabled="false" android:state_focused="true" >
        <shape>
            <corners android:radius="@dimen/btnRadiusLarge" />
            <solid android:color="@color/colorTransparent" />
        </shape>
    </item>
    <item android:state_enabled="true" android:state_focused="true" android:state_pressed="true">
        <shape>
            <corners android:radius="@dimen/btnRadiusLarge" />
            <solid android:color="@color/colorPrimaryRipple" />
        </shape>
    </item>
    <item android:state_focused="false" android:state_pressed="true">
        <shape>
            <corners android:radius="@dimen/btnRadiusLarge" />
            <solid android:color="@color/colorPrimaryRipple" />
        </shape>
    </item>

</selector>