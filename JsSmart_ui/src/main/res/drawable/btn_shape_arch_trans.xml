<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" android:exitFadeDuration="200">
    <item android:state_enabled="false">
        <shape>
            <corners android:radius="@dimen/btnRadiusLarge" />
            <solid android:color="@color/colorWhiteAlpha60" />
        </shape>
    </item>
    <item android:state_enabled="true" android:state_pressed="true">
        <layer-list>
            <item>
                <shape>
                    <corners android:radius="@dimen/btnRadiusLarge" />
                    <solid android:color="@color/colorBlackAlpha60" />
                </shape>
            </item>
            <item>
                <shape>
                    <corners android:radius="@dimen/btnRadiusLarge" />
                    <solid android:color="#10000000" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <shape>
            <corners android:radius="@dimen/btnRadiusLarge" />
            <solid android:color="@color/colorBlackAlpha60" />
        </shape>
    </item>
</selector>
