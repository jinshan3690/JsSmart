<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/title"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:background="@color/statusBarColor"
    android:transitionName="shareViewTitle">

    <LinearLayout
        android:id="@+id/titleLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/titleLeftImage"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:src="@mipmap/ico_arrow_white_left" />

        <com.js.smart.ui.widget.CircleImageView
            android:id="@+id/titleLeftHeadImage"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@mipmap/ico_default"/>

        <TextView
            android:id="@+id/titleLeftText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="取消"
            android:textColor="@color/textTitleColor"
            android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:padding="5dp"
        android:gravity="center">

        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:text="标题"
            android:textColor="@color/textTitleColor"
            android:textSize="@dimen/titleTextSize" />

        <ImageView
            android:id="@+id/titleImg"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:src="@mipmap/ico_logo"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/titleRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:padding="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/titleRightImage"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:src="@mipmap/ico_logo"/>

        <TextView
            android:id="@+id/titleRightText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确定"
            android:textColor="@color/textTitleColor"
            android:textSize="12sp" />

    </LinearLayout>

</RelativeLayout>