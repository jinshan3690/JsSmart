<?xml version="1.0" encoding="utf-8"?>
<com.balysv.materialripple.MaterialRippleLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/lay_15"
    android:paddingRight="@dimen/lay_15"
    app:mrl_rippleAlpha="0.2"
    app:mrl_rippleColor="@color/colorPrimaryRippleDark"
    app:mrl_rippleDimension="0dp"
    app:mrl_rippleDuration="0"
    app:mrl_rippleHover="true"
    app:mrl_rippleOverlay="true"
    app:mrl_rippleRoundedCorners="0dp">

    <LinearLayout
        android:id="@id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp">

            <ImageView
                android:id="@id/imageView1"
                android:layout_width="38dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/lay_25"
                android:layout_toRightOf="@id/imageView1"
                android:textColor="@color/textColor"
                android:textSize="@dimen/font_18" />

            <CheckBox
                android:id="@id/checkBox1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/lay_15"
                android:background="@drawable/cb_tick_primary"
                android:button="@null"
                android:clickable="false"
                android:focusable="false" />

            <ImageView
                android:id="@id/imageView2"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/lay_12"
                android:src="@mipmap/ico_arrow_grey_right" />

        </RelativeLayout>

        <include layout="@layout/v_divider" />

    </LinearLayout>

</com.balysv.materialripple.MaterialRippleLayout>