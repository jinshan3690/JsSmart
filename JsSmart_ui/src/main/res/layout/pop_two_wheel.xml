<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/lay_15"
        android:background="@drawable/btn_shape_white"
        android:orientation="vertical"
        android:padding="@dimen/lay_15">

        <TextView
            android:id="@id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textSize="@dimen/font_16" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/lay_15"
            android:gravity="center"
            android:orientation="horizontal">

            <com.js.smart.ui.widget.WheelView
                android:id="@id/wheelView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <com.js.smart.ui.widget.WheelView
                android:id="@id/wheelView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/lay_20"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/refer1"
            android:layout_marginTop="@dimen/lay_15"
            android:orientation="horizontal">

            <com.balysv.materialripple.MaterialRippleLayout
                android:id="@id/layout1"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:background="@drawable/btn_shape_arch_border_gray"
                app:mrl_rippleAlpha="0.2"
                app:mrl_rippleColor="@color/colorPrimaryRippleDark"
                app:mrl_rippleDimension="@dimen/lay_40"
                app:mrl_rippleDuration="0"
                app:mrl_rippleHover="true"
                app:mrl_rippleOverlay="true"
                app:mrl_rippleRoundedCorners="@dimen/lay_40">

                <TextView
                    android:id="@id/btn1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/btn_shape_arch_ripple"
                    android:gravity="center"
                    android:text="@string/cancel"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/btnTextSize" />

            </com.balysv.materialripple.MaterialRippleLayout>

            <View
                android:layout_width="20dp"
                android:layout_height="match_parent" />

            <com.balysv.materialripple.MaterialRippleLayout
                android:id="@id/layout2"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:background="@drawable/btn_shape_arch_primary"
                app:mrl_rippleAlpha="0.2"
                app:mrl_rippleColor="@color/defaultPressed"
                app:mrl_rippleDimension="@dimen/lay_40"
                app:mrl_rippleDuration="0"
                app:mrl_rippleHover="true"
                app:mrl_rippleOverlay="true"
                app:mrl_rippleRoundedCorners="@dimen/lay_40">

                <TextView
                    android:id="@id/btn2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/btn_shape_arch_ripple"
                    android:gravity="center"
                    android:text="@string/ok"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/btnTextSize" />

            </com.balysv.materialripple.MaterialRippleLayout>

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>