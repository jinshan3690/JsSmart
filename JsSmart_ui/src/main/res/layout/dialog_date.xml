<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@id/textView1"
        android:layout_width="match_parent"
        android:layout_height="85px"
        android:background="@drawable/dialog_title_primary"
        android:gravity="center"
        android:text="提示"
        android:textColor="@color/colorWhite"
        android:textSize="30px" />

    <LinearLayout
        android:id="@id/refer1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView1"
        android:gravity="center"
        android:background="@color/colorWhite">

        <DatePicker
            android:id="@id/datePicker1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:calendarViewShown="false"
            style="@android:style/Widget.Holo.DatePicker"/>

        </LinearLayout>

    <View
        android:id="@id/refer2"
        android:layout_below="@id/refer1"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/colorBackgroundDark"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/refer2"
        android:orientation="horizontal">

        <com.balysv.materialripple.MaterialRippleLayout
            android:id="@id/layout1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="90px"
            android:background="@color/colorWhite"
            app:mrl_rippleColor="@color/defaultPressed"
            app:mrl_rippleAlpha="0.2"
            app:mrl_rippleDuration="0"
            app:mrl_rippleOverlay="true"
            app:mrl_rippleRoundedCorners="0dp"
            app:mrl_rippleDimension="0dp"
            app:mrl_rippleHover="true">

            <Button
                android:id="@id/btn1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_ripple"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/btnTextSize"
                android:text="确定"/>

        </com.balysv.materialripple.MaterialRippleLayout>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/colorBackgroundDark"/>

        <com.balysv.materialripple.MaterialRippleLayout
            android:id="@id/layout2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="90px"
            android:background="@color/colorWhite"
            app:mrl_rippleColor="@color/defaultPressed"
            app:mrl_rippleAlpha="0.2"
            app:mrl_rippleDuration="0"
            app:mrl_rippleOverlay="true"
            app:mrl_rippleRoundedCorners="0dp"
            app:mrl_rippleDimension="0dp"
            app:mrl_rippleHover="true">

            <Button
                android:id="@id/btn2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/btn_ripple"
                android:textColor="@color/colorPrimary"
                android:text="取消"
                android:textSize="@dimen/btnTextSize"/>

        </com.balysv.materialripple.MaterialRippleLayout>

    </LinearLayout>

</RelativeLayout>